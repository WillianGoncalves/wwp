<div id="deletion_confirmation_modal_<%= comment.id %>" class="modal">
  <div class="modal-content">
    <h4><%= t('caution') %></h4>
    <p><%= t('comments.delete.message') %></p>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect btn-flat"><%= t('actions.cancel') %></a>
    <%= link_to t('actions.delete'), comment_path(comment), method: :delete, class: "modal-action modal-close waves-effect btn-flat red-text text-darken-3" %>
  </div>
</div>

