<% if user_signed_in? %>
  <header>
    <nav>
      <div class="nav-wrapper">
        <!-- Mobile menu button -->
        <a href="#" data-activates="mobile-menu" class="button-collapse"><i class="material-icons">menu</i></a>

        <!-- Mobile menu -->
        <%= render 'layouts/mobile_menu' %>

        <ul>
          <li>
            <!-- logo -->
            <%= link_to (image_tag("logo.svg")), root_path, class: "browser-logo hide-on-med-and-down" %>
          </li>
          <% unless current_group.nil? %>
            <li>
              <b><%= link_to current_group.name, group_path(current_group) %></b>
            </li>
            <li>
              <% if current_group.join_requests_to_be_accepted.any? %>
                <%= link_to group_join_requests_path(current_group), class: 'btn-floating pulse' do %>
                  <i class="material-icons">person_add</i>
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>

        <!-- Menu -->
        <%= render 'layouts/browser_menu' %>
      </div>
    </nav>
  </header>

  <%= javascript_tag do %>
  $( document ).ready(function(){
    $(".button-collapse").sideNav();
  })
  <% end %>
<% end %>
