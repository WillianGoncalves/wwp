<% if user_signed_in? %>
  <header>
    <ul id="dropdown1" class="dropdown-content">
      <li><%= link_to 'My profile', edit_user_registration_path(current_user) %> </li>
      <li class="divider"></li>
      <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
    </ul>
    <nav>
      <div class="nav-wrapper">
        <%= link_to (image_tag("logo.svg")), root_path, class: "logo" %>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><%= link_to t('groups.index'), groups_path %></li>
          <li>
            <a class="dropdown-button" href="#!" data-activates="dropdown1">
              <%= image_tag current_user.avatar.standard.url, class: 'circle responsive-img nav-avatar' %>
              <i class="material-icons right">arrow_drop_down</i>
            </a>
          </li>
        </ul>
        <ul class="side-nav" id="mobile-demo">
          <li><%= link_to t('groups.index'), groups_path %></li>
        </ul>
      </div>
    </nav>
  </header>

  <%= javascript_tag do %>
  $( document ).ready(function(){
    $(".button-collapse").sideNav();
  })
  <% end %>
<% end %>
