<% if user_signed_in? %>
  <header>

    <!-- Account menu -->
    <ul id="account_menu" class="dropdown-content">

      <!-- My account -->
      <li><%= link_to t('registrations.edit'), edit_user_registration_path(current_user) %> </li>

      <li class="divider"></li>

      <!-- Logout -->
      <li><%= link_to t('users.sign_out'), destroy_user_session_path, method: :delete %></li>

    </ul>

    <nav>
      <div class="nav-wrapper">

        <!-- logo -->
        <%= link_to (image_tag("logo.svg")), root_path, class: "logo" %>

        <!-- Menu -->
        <ul id="nav-mobile" class="right hide-on-med-and-down">

          <!-- Song -->
          <li><%= link_to t('songs.index'), group_songs_path(current_user.last_group) %></li>

          <!-- Tags -->
          <li><%= link_to t('tags.index'), tags_path %></li>

          <!-- Groups -->
          <li><%= link_to t('groups.index'), groups_path %></li>

          <!-- Account menu button -->
          <li>
            <a class="dropdown-button" href="#!" data-activates="account_menu">
              <%= image_tag current_user.avatar.standard.url, class: 'circle responsive-img nav-avatar' %>
              <i class="material-icons right">arrow_drop_down</i>
            </a>
          </li>

        </ul>

        <!-- Mobile menu button -->
        <a href="#" data-activates="mobile-menu" class="button-collapse"><i class="material-icons">menu</i></a>

        <!-- Mobile menu -->
        <ul class="side-nav" id="mobile-menu">

          <!-- Song -->
          <li><%= link_to t('songs.index'), group_songs_path(current_user.last_group) %></li>

          <!-- Tags -->
          <li><%= link_to t('tags.index'), tags_path %></li>

          <!-- Groups -->
          <li><%= link_to t('groups.index'), groups_path %></li>

        </ul>
      </div>
    </nav>
  </header>

  <%= javascript_tag do %>
  $( document ).ready(function(){
    $(".button-collapse").sideNav();
  })
  <% end %>
<% end %>
