<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'pages/groups/show' %>
<% end %>

<div class="center-align">
  <div>
    <h1 class="teste"><%= @group.name %></h1>
  </div>

  <!--<%= image_tag @group.image.url, class: 'circle responsive-img' %>-->
</div>

<% if @group.join_requests_to_be_accepted.any? %>
  <%= link_to group_join_requests_path(@group), class: 'btn-floating pulse' do %>
    <i class="material-icons">person_add</i>
  <% end %>
<% end %>

<div class="nav-extended">
  <div class="nav-content">
    <ul class="tabs center-align">
      <li class="tab">
        <a href="#members" class="active ">
          <span class="hide-on-small-only"><%= I18n.t('activerecord.attributes.group.members') %></span>
          <i class="material-icons hide-on-med-and-up">group</i>
        </a>
      </li>
      <li class="tab">
        <a href="#presentations">
          <span class="hide-on-small-only"><%= I18n.t('activerecord.attributes.group.presentations') %></span>
          <i class="material-icons hide-on-med-and-up">play_arrow</i>
        </a>
      </li>
    </ul>
  </div>
</div>

<div id="members" class="col s12 tab-content">
  <members :group="<%= render template: 'groups/show.json.jbuilder', locals: { group: @group } %>"></members>
</div>

<div id="presentations" class="col s12 tab-content"></div>
