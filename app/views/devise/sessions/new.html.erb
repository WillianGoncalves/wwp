<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'pages/devise/login' %>
<% end %>

<% flash.each do |type, msg| %>
  <snack-bar type="<%= type %>"><%= msg %></snack-bar>
<% end %>

<div class="row">
  <div class="col s12 m4 offset-m4" id="container">
    <h5 class="center-align title">what we play</h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'devise-form'}) do |f| %>
      <div class="input-field vertical-margin">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="input-field vertical-margin">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="input-field vertical-margin">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions center-align">
        <%= f.submit t('sessions.new'), class: 'btn' %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <%= render "devise/shared/links" %>
  </div>
</div>
