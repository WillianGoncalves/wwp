<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'pages/devise/login' %>
<% end %>

<div class="row">
  <div class="col s12 m4 offset-m4" id="container">
    <h5 class="center-align" id="title">what we play</h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'devise-form'}) do |f| %>
      <div class="field vertical-margin">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field vertical-margin">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field vertical-margin">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div id="actions" class="center-align">
        <%= f.submit t('users.sign_in'), class: 'btn' %>
      </div>
    <% end %>

    <div class="center-align">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
