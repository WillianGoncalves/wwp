<div class="row">
  <div class="col s12 m6 offset-m3">
    <h2 class="center-align">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'devise-form'}) do |f| %>
      <div class="input-field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="input-field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
      </div>

      <div class="input-field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
      </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>Avatar</span>
          <%= f.file_field :avatar %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>

      <div class="input-field">
        <%= f.label :password %><br />
        <%= f.password_field :password, { autocomplete: "off", minlength: 6 } %>
      </div>

      <div class="input-field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit t('users.sign_up'), class: 'btn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
