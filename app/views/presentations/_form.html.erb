<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'pages/presentations/form' %>
<% end %>
<div class="row">
  <div class="col s12 m8 offset-m2">
    <%= form_with(model: [ current_group, @presentation ]) do |f| %>
      <div class="input-field">
        <%= text_field_tag :date, @date, { class: 'datepicker', placeholder: t('activerecord.attributes.presentation.date') } %>
        <% if flash[:date] %>
          <span class="error"><%= flash[:date] %></span>
        <% end %>
      </div>

      <div class="input-field">
        <%= text_field_tag :time, @time, { class: 'timepicker', placeholder: t('activerecord.attributes.presentation.time') } %>
        <% if flash[:time] %>
          <span class="error"><%= flash[:time] %></span>
        <% end %>
      </div>

      <div class="input-field">
        <%= f.text_field :local, placeholder: t('activerecord.attributes.presentation.local') %>
      </div>

      <div>
        <%= hidden_field_tag :song_ids, song_ids(@presentation), { id: 'song_ids', multiple: true } %>
        <songs-selector id="songs_selector" :groupid="<%= current_group.id %>"></songs-selector>
        <% if @presentation.errors[:presentation_songs].present? %>
          <span class="error"><%= @presentation.errors[:presentation_songs].first %></span>
        <% end %>
      </div>

      <div class="actions right-align">
        <% if @presentation.persisted? %>
          <button class="btn-danger" @click="showModal('#deletion_confirmation_modal')" type="button">
            <%= t('actions.delete') %>
          </button>
        <% end %>
        <%= button_tag t('actions.create'), { class: 'btn', type: 'submit' } %>
      </div>
    <% end %>
  </div>
</div>

<% if @presentation.persisted? %>
  <%= render 'deletion_modal' %>
<% end %>
