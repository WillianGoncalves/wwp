<div class="row">
  <%= render "search_form" %>
  <div class="right">
    <%= link_to new_group_presentation_path(current_group), class: 'btn-floating' do %>
      <i class="material-icons">add</i>
    <% end %>
  </div>
</div>

<div class="row">
  <% @presentations.each do |presentation| %>
      <div class="col s12 m4">
        <%= link_to group_presentation_path(current_group, presentation) do %>
          <presentation-card :presentation="<%= render "components/presentation_card.json.jbuilder", presentation: presentation %>" ></presentation-card>
        <% end %>
      </div>
  <% end %>

  <% if @presentations.empty? %>
    <p class="center-align"><%= "#{ t('presentations.no_presentations_in') } #{ t('date.month_names')[@month.to_i] }" %></p>
  <% end %>
</div>
