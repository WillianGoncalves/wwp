<div class="row">
  <%= form_tag(group_presentations_path(current_group), method: 'get') do %>
    <div class="col s5 m2">
      <%= select_tag 'month', options_for_select(months, @month) %>
    </div>
    <% if years.count > 1 %>
      <div class="col s4 m2">
        <%= select_tag 'year', options_for_select(years, @year) %>
      </div>
    <% end %>
    <div class="col s3 m2 right-align-on-small">
      <%= button_tag class: 'btn-floating' do %>
        <i class="material-icons">search</i>
      <% end %>
    </div>
  <% end %>

  <div class="col s12 m6 right-align">
    <%= link_to new_group_presentation_path(current_group), class: 'btn-floating' do %>
      <i class="material-icons">add</i>
    <% end %>
  </div>
</div>

<div class="row">
  <% @presentations.each do |presentation| %>
      <div class="col s12 m4">
        <%= link_to group_presentation_path(current_group, presentation) do %>
          <presentation-card :presentation="<%= render "presentation_card.json.jbuilder", presentation: presentation %>" ></presentation-card>
        <% end %>
      </div>
  <% end %>

  <% if @presentations.empty? %>
    <p class="center-align"><%= "#{ t('presentations.no_presentations_in') } #{ t('date.month_names')[@month] }" %></p>
  <% end %>
</div>
